# npm configuration for Shindara Style Hub

# Use the official npm registry
registry=https://registry.npmjs.org/

# Increase network timeout for slower connections
fetch-timeout=60000
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Strict SSL can be disabled if you encounter SSL cipher errors
# Uncomment the line below only if you continue to experience SSL/TLS errors
# strict-ssl=false

# Legacy peer dependencies (helps avoid conflicts)
# legacy-peer-deps=false  # This is the default value

# Engine strict (set to false to allow version mismatches)
engine-strict=false
